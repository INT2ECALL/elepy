<div id="app">
    <p id="slug" style="display:none;">{{ model.slug }}</p>
    <Elepy v-if="selectedModel!=null" :model="selectedModel"/>
</div>

<stylesheet src="https://unpkg.com/elepy-vue@0.3/dist/ElepySingleVue.css"/>

<script src="https://unpkg.com/elepy-vue@0.3/dist/ElepySingleVue.umd.js"></script>
<script>
    Vue.component('Elepy', ElepySingleVue);
    const app = new Vue({
        el: '#app',
        delimiters: ['((', '))'],
        components: {"Elepy": ElepySingleVue},
        data() {
            return {selectedModel: null};
        },
        methods: {
            getModel() {
                axios.get("/config").then(response => {
                    this.selectedModel = response.data.filter(function (model) {
                        return model.slug === document.getElementById('slug').innerText
                    })[0];
                });
            }
        },
        created() {
            this.getModel();
        }
    });

</script>